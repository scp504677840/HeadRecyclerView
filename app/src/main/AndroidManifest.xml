<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scp.headrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LinearLayoutActivity"></activity>
        <activity android:name=".GridLayoutActivity"></activity>
        <activity android:name=".GridLayoutVariableSpanSizeActivity"></activity>
        <activity android:name=".GridLayoutHeaderActivity"></activity>
        <activity android:name=".GridLayoutAutoFitActivity"></activity>
        <activity android:name=".GridLayoutAutoHeaderActivity"></activity>
        <activity android:name=".GridLayoutAddRemoveActivity"></activity>
    </application>

</manifest>
